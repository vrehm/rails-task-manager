<p><%= link_to 'Create a new task', new_task_path %></p>
<% @tasks.each do |task| %>
  <h1><%= link_to task.name.capitalize, task_path(task) %></h1>
  <p>Description: <%= task.description %></p>
  <p>Done: <%= task.done %></p>
  <p><%= link_to 'Edit this task', edit_task_path(task) %></p>
  <p><%= link_to "Delete", task_path(task), method: :delete %></p>
<% end %>
